<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/crearCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/crearCuenta"
            android:textAllCaps="false"
            android:textColor="@color/azulOscuro"
            android:textSize="@dimen/dim32"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNombre"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crearCuenta">

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim16"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:digits="@string/digitosNombre"
                android:ems="10"
                android:hint="@string/nombre"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEmail"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutNombre">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:digits="@string/digitosEmail"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutNombre" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutContrasena"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutEmail">

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:ems="10"
                android:hint="@string/contrasena"
                android:inputType="textPassword"
                android:maxLength="25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutEmail" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutContrasenaRepetida"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutContrasena">

            <EditText
                android:id="@+id/contrasenaRepetida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:ems="10"
                android:hint="@string/contrasenaRepetida"
                android:inputType="textPassword"
                android:maxLength="25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutContrasena" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tipoDeTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim32"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/tipoDeTarjeta"
            android:textColor="@color/azulOscuro"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutContrasenaRepetida" />

        <RadioGroup
            android:id="@+id/tarjetas"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim32"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim32"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipoDeTarjeta">

            <RadioButton
                android:id="@+id/credito"
                android:layout_width="@dimen/dim162"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/credito"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/debito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/debito"
                android:textSize="18dp" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNumeroTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dim4"
            app:layout_constraintEnd_toStartOf="@+id/layoutCcv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tarjetas">

            <EditText
                android:id="@+id/numeroTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim8"
                android:backgroundTint="@color/azulOscuro"
                android:ems="10"
                android:hint="@string/numeroTarjeta"
                android:inputType="numberSigned"
                android:maxLength="16"
                app:layout_constraintEnd_toStartOf="@+id/ccv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tarjetas" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCcv"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tarjetas">

            <EditText
                android:id="@+id/ccv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim8"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/ccv"
                android:inputType="number"
                android:maxLength="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/layoutNumeroTarjeta"
                app:layout_constraintTop_toBottomOf="@+id/tarjetas" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/fechaVencimiento"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim32"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/fechaVencimiento"
            android:textColor="@color/azulOscuro"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutNumeroTarjeta" />

        <Spinner
            android:id="@+id/spinnerMes"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:entries="@array/meses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fechaVencimiento" />

        <Spinner
            android:id="@+id/spinnerAno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:entries="@array/anos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinnerMes"
            app:layout_constraintTop_toBottomOf="@+id/fechaVencimiento" />

        <TextView
            android:id="@+id/errorFechaVencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="@string/errorFechaVencimiento"
            android:textColor="@color/rojo"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAno" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCbu"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorFechaVencimiento">

            <EditText
                android:id="@+id/cbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:ems="10"
                android:hint="@string/cbu"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerMes" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAliasCbu"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCbu">

            <EditText
                android:id="@+id/aliasCbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:backgroundTint="@color/azulOscuro"
                android:ems="10"
                android:hint="@string/aliasCbu"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutCbu" />

        </com.google.android.material.textfield.TextInputLayout>

        <Switch
            android:id="@+id/realizarCarga"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim32"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim32"
            android:fontFamily="sans-serif-medium"
            android:text="@string/realizarCarga"
            android:textColor="@color/azulOscuro"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutAliasCbu"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/creditoInicial"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="@string/creditoInicial"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorCargaInicial" />

        <SeekBar
            android:id="@+id/montoCredito"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim24"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim24"
            android:visibility="gone"
            android:max="1500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monto" />

        <TextView
            android:id="@+id/monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:text="@string/monto"
            android:textColor="@color/azulOscuro"
            android:visibility="gone"
            android:textSize="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorCargaInicial" />

        <TextView
            android:id="@+id/errorCargaInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="40dp"
            android:text="@string/errorCargaInicial"
            android:textColor="@color/rojo"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/realizarCarga" />

        <CheckBox
            android:id="@+id/terminos"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim32"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim32"
            android:checked="false"
            android:textSize="18dp"
            android:text="@string/terminos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/montoCredito" />

        <Button
            android:id="@+id/registrar"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="false"
            android:fontFamily="sans-serif-medium"
            android:text="@string/registrar"
            android:textColor="@color/blanco"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/terminos" />

        <ImageView
            android:id="@+id/imagenUsuario"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>