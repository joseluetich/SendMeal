<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNombre"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim16"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim16"
                android:layout_marginEnd="@dimen/dim16"
                android:digits="@string/digitosNombre"
                android:ems="10"
                android:hint="@string/nombre"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEmail"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutNombre">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:hint="@string/email"
                android:digits="@string/digitosEmail"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutNombre" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutContrasena"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutEmail">

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:hint="@string/contrasena"
                android:inputType="textPassword"
                android:maxLength="25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutEmail" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutContrasenaRepetida"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutContrasena">

            <EditText
                android:id="@+id/contrasenaRepetida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:hint="@string/contrasenaRepetida"
                android:inputType="textPassword"
                android:maxLength="25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutContrasena" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tipoDeTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dim8"
            android:text="@string/tipoDeTarjeta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutContrasenaRepetida" />

        <RadioGroup
            android:id="@+id/tarjetas"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipoDeTarjeta">

            <RadioButton
                android:id="@+id/credito"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/credito" />

            <RadioButton
                android:id="@+id/debito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/debito" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNumeroTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/layoutCcv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tarjetas">

            <EditText
                android:id="@+id/numeroTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim8"
                android:ems="10"
                android:hint="@string/numeroTarjeta"
                android:inputType="numberSigned"
                android:maxLength="16"
                app:layout_constraintEnd_toStartOf="@+id/ccv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tarjetas" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCcv"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tarjetas">

            <EditText
                android:id="@+id/ccv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim8"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/ccv"
                android:inputType="number"
                android:maxLength="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/layoutNumeroTarjeta"
                app:layout_constraintTop_toBottomOf="@+id/tarjetas" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/fechaVencimiento"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dim8"
            android:text="@string/fechaVencimiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutNumeroTarjeta" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutMes"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/layoutAno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fechaVencimiento">

            <EditText
                android:id="@+id/mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim4"
                android:layout_marginEnd="@dimen/dim8"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/mes"
                android:inputType="number"
                android:maxLength="2"
                app:layout_constraintEnd_toStartOf="@+id/ano"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fechaVencimiento" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAno"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fechaVencimiento">

            <EditText
                android:id="@+id/ano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim8"
                android:layout_marginTop="@dimen/dim4"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/ano"
                android:inputType="number"
                android:maxLength="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/layoutMes"
                app:layout_constraintTop_toBottomOf="@+id/fechaVencimiento" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCbu"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutMes">

            <EditText
                android:id="@+id/cbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:hint="@string/cbu"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutMes" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAliasCbu"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="@dimen/dim16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCbu">

            <EditText
                android:id="@+id/aliasCbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim16"
                android:layout_marginTop="@dimen/dim8"
                android:layout_marginEnd="@dimen/dim16"
                android:ems="10"
                android:hint="@string/aliasCbu"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutCbu" />

        </com.google.android.material.textfield.TextInputLayout>

        <Switch
            android:id="@+id/realizarCarga"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="32dp"
            android:text="@string/realizarCarga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutAliasCbu"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/creditoInicial"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16"
            android:layout_marginTop="@dimen/dim8"
            android:text="@string/creditoInicial"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/realizarCarga" />

        <SeekBar
            android:id="@+id/montoCredito"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/dim16"
            android:layout_marginEnd="24dp"
            android:max="1500"
            android:min="0"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/creditoInicial" />

        <TextView
            android:id="@+id/monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim16"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="@dimen/dim8"
            android:text="@string/monto"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim14"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/montoCredito"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/realizarCarga" />

        <CheckBox
            android:id="@+id/terminos"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim32"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="32dp"
            android:checked="false"
            android:text="@string/terminos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/montoCredito" />

        <Button
            android:id="@+id/registrar"
            android:layout_width="@dimen/dim0"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="@dimen/dim8"
            android:layout_marginEnd="48dp"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="false"
            android:text="@string/registrar"
            android:textColor="@color/blanco"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/terminos" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>